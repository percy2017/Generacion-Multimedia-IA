    <style>
        /* Ajustes de color para el tema oscuro */
        [data-bs-theme="dark"] {
            --bs-body-bg: #212529;
            --bs-body-color: #f8f9fa;
            --bs-card-bg: #343a40;
            --bs-navbar-bg: #2b3035;
        }

        /* Ajustar colores del header/navbar */
        .navbar-brand img {
            width: 30px;
            height: 30px;
        }

        .balance-pill {
            background-color: rgba(255, 255, 255, 0.1);
            color: #f8f9fa;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.875rem;
        }

        [data-bs-theme="light"] .balance-pill {
            background-color: #e9ecef;
            color: #212529;
        }

        /* Espaciado para el contenido principal debajo del navbar fijo */
        main {
            padding-top: 70px;
            /* Ajustar seg√∫n la altura del navbar */
        }

        /* Estilos para tabs */
        .nav-tabs .nav-link {
            font-weight: 500;
        }

        .nav-tabs .nav-link.active {
            background-color: rgba(var(--bs-primary-rgb), 0.1);
        }

        /* Estilos para el √°rea de resultado */
        #image-result-wrapper {
            min-height: 300px;
            /* Altura m√≠nima para el placeholder */
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            border-radius: 0.5rem;
        }

        [data-bs-theme="dark"] #image-result-wrapper {
            background-color: #495057;
        }

        #image-result-wrapper img,
        #image-result-wrapper video {
            max-width: 100%;
            max-height: 500px;
            /* Limitar la altura */
            border-radius: 0.5rem;
        }

        /* Estilos para la UI din√°mica */
        .dynamic-input-group {
            margin-bottom: 1rem;
        }

        .dynamic-input-group label {
            font-weight: 500;
        }

        /* Para sliders con valor mostrado */
        .slider-value {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }

        /* Estilos para galer√≠a */
        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
        }

        .media-item {
            border-radius: 0.5rem;
            overflow: hidden;
            position: relative;
            aspect-ratio: 1/1;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .media-item:hover {
            transform: scale(1.05);
        }

        .media-item img,
        .media-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .media-item .media-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 0.5rem;
            font-size: 0.8rem;
            transform: translateY(100%);
            transition: transform 0.2s;
        }

        .media-item:hover .media-overlay {
            transform: translateY(0);
        }

        /* Estilos para perfil */
        .budget-progress {
            height: 1.5rem;
            border-radius: 0.75rem;
        }

        .budget-progress .progress-bar {
            transition: width 1s ease-in-out;
        }
    </style>
</head>

<body>
