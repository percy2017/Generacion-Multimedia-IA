    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script>
        const LITELLM_URL = "<%= user.url %>";
        const LITELLM_API_KEY = "<%= user.key %>";
        const TOOL_SCHEMAS = <%- JSON.stringify(TOOL_SCHEMAS) %>;
