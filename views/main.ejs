    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('theme-toggle');
            const themeIcon = document.getElementById('theme-icon');
            const htmlElement = document.documentElement;
            function setTheme(theme) {
                htmlElement.setAttribute('data-bs-theme', theme);
                localStorage.setItem('theme', theme);
                // Actualizar el icono del bot√≥n
                themeIcon.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
            }

            // Cargar tema preferido al iniciar
            const savedTheme = localStorage.getItem('theme');
            const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

            if (savedTheme) {
                setTheme(savedTheme);
            } else if (systemPrefersDark) {
                setTheme('dark');
            } else {
                setTheme('light');
            }

            // Evento para el bot√≥n de toggle
            toggleButton.addEventListener('click', () => {
                const currentTheme = htmlElement.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                setTheme(newTheme);
            });

            // Calcular y mostrar porcentaje de uso del presupuesto
            const spend = "<%= user.spend %>";
            const budget = "<%= user.budget ?user.budget: 'null' %>";
            if (budget) {
                const percent = (spend / budget) * 100;
                document.getElementById('profile-budget-percent').textContent = percent.toFixed(2) + '%';
                document.getElementById('profile-budget-progress').style.width = Math.min(percent, 100) + '%';

                document.getElementById('profile-key-alias').innerHTML = "<%= user.alias %>";
                document.getElementById('profile-key-name').innerHTML = "<%= user.keyName %>";
                // Colorear la barra de progreso seg√∫n el porcentaje
                if (percent < 50) {
                    document.getElementById('profile-budget-progress').classList.add('bg-success');
                } else if (percent < 80) {
                    document.getElementById('profile-budget-progress').classList.add('bg-warning');
                } else {
                    document.getElementById('profile-budget-progress').classList.add('bg-danger');
                }
            } else {
                document.getElementById('profile-budget-percent').textContent = 'Sin l√≠mite';
                document.getElementById('profile-budget-progress').style.width = '100%';
                document.getElementById('profile-budget-progress').classList.add('bg-info');
            }


        });
    </script>
